<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tablut.LoadGamePage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="SaddleBrown">
            <Frame BackgroundColor="Yellow" Padding="24" CornerRadius="0">
                <Label Text="{Binding TitleText}" HorizontalTextAlignment="Center" TextColor="SaddleBrown" FontSize="50" FontAttributes="Bold"/>
            </Frame>
            <ListView ItemsSource="{Binding SavedGames}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Button Text="{Binding FileName}" BackgroundColor="Brown" Command="{Binding LoadGameCommand}" CommandParameter="{Binding}"></Button>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>